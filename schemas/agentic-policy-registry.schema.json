{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/agentic-policy-registry.schema.json",
  "type": "object",
  "required": ["schema_version", "registry", "tools"],
  "properties": {
    "schema_version": { "type": "string" },
    "registry": {
      "type": "object",
      "required": ["id", "owner", "intent"],
      "properties": {
        "id": { "type": "string" },
        "owner": { "type": "string" },
        "created_at": { "type": "string" },
        "updated_at": { "type": "string" },
        "intent": { "type": "string" }
      },
      "additionalProperties": true
    },
    "governance": { "type": "object", "additionalProperties": true },
    "routing": { "type": "object", "additionalProperties": true },
    "tools": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "kind", "name", "when_to_use"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z]+\\.[a-z0-9_\\-\\.]+$" },
          "kind": { "type": "string" },
          "name": { "type": "string" },
          "status": { "type": "string" },
          "when_to_use": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "decision_logic": { "type": "object", "additionalProperties": true },
          "constraints": { "type": "object", "additionalProperties": true },
          "interfaces": { "type": "object", "additionalProperties": true },
          "composition": { "type": "object", "additionalProperties": true }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
